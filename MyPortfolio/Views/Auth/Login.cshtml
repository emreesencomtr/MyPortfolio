@{
    ViewData["Title"] = "Login";
}

<div class="container">
    <h2>Giriş Yap</h2>

    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger">
            @ViewBag.Error
        </div>
    }

    <form method="post">
        <div class="form-group">
            <label for="email">E-posta</label>
            <input type="email" class="form-control" id="email" name="email" placeholder="E-posta girin" required />
        </div>

        <div class="form-group">
            <label for="password">Şifre</label>
            <input type="password" class="form-control" id="password" name="password" placeholder="Şifre girin" required />
        </div>
        <br />
        <button type="submit" class="btn btn-primary">Giriş Yap</button>
    </form>
</div>
